@model  List<razorop.EDM.tblemp>
@{
    ViewBag.Title = "Display";
}

<h2>Display</h2>

@using (Html.BeginForm())
{
<table class="table">
    <tr>
        <td>emp name</td>
        <td>emp address</td>
        <td>emp mobile</td>
        <td>emp dob</td>
        <td>emp hobby</td>
        <td>emp status</td>
        <td>emp gender</td>
        <td>emp profile</td>
        <td>emp country</td>
        <td>action</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(c=>item.emp_name)</td>
            <td>@item.emp_add</td>
            <td>@item.emp_mob</td>
            <td>@item.emp_dob</td>
            <td>@item.emp_hob</td>
            <td>@item.emp_gender</td>
            <td> <img src="~/images/@item.emp_profile"width="100"height="100"/> </td>
            <td>@item.emp_status</td>
            <td>@item.country_name</td>
            
            <td>
                @Html.ActionLink("edit","edit",new {id=item.emp_id })
                
            </td>

        </tr>
    }
</table>

}