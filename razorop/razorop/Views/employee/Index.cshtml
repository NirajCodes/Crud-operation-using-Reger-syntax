@model razorop.EDM.tblemp

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
@using (Html.BeginForm("Index", "employee", FormMethod.Post, new { enctype = "multipart/form-data", @datavalidatorvalidate ="", @datavalidatortheme ="bs3form"}))
{
@*<div class="form-group">
    <label class="control-label">Emp name</label>
    @Html.TextBoxFor(c=>c.emp_name,new { @class="form-control", @datavalidator= "required",@type="email"})


